# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org
# Credits: WordPress Coding Standards
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab

[{*.sql,*.yml,*.yaml,*.cff}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
[{*.txt,*.dist}]
end_of_line = crlf
